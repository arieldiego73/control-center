<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper for tbl Section   -->
<mapper namespace="com.controlcenter.controlcenter.dao.SectionDao">

<!-- Fetch Data -->
    <select id="getAllSection" resultType="com.controlcenter.controlcenter.model.Section">
        SELECT *
         FROM tbl_section_mst
        WHERE del_flag = 0;
    </select>

<!-- Add Data -->
    <insert id="addSection" parameterType="com.controlcenter.controlcenter.model.Section">
        INSERT INTO tbl_section_mst(section_name, reg_id, update_id)
             VALUES (#{section_name}, #{reg_id}, #{update_id});
    </insert>
    
<!-- Updata Data -->
    <update id="editSectionInfo" parameterType="map">
        UPDATE tbl_section_mst
           SET section_name=#{section.section_name}
         WHERE section_id = #{id}
    </update>

<!-- Logical Delete Data -->
    <update id="logicalDeleteSection" parameterType="map">
        UPDATE tbl_section_mst
           SET del_flag=#{section.del_flag}
        WHERE section_id = #{id}
    </update>

</mapper>