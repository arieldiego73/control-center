               proj_id=#{userproject.proj_id}
         WHERE upid = #{id}
    </update>

<!-- Logical Delete Data -->
    <update id="logicalDeleteUserProject" parameterType="map">
        UPDATE tbl_user_project
           SET del_flag=1
        WHERE upid = #{id}
    </update>

</mapper>